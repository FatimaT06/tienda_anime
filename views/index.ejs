<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Tienda Anime - Inicio</title>
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <%- include('partials/header') %>
  
  <main class="container">
    <h1 class="page-title">Productos Destacados</h1>
    
    <div class="productos-grid">
      <% productos.forEach(producto => { %>
        <div class="producto-card">
          <div class="producto-imagen">
            <img src="<%= producto.imagen %>" alt="<%= producto.nombre %>" onerror="this.src='https://via.placeholder.com/300x400?text=Imagen+No+Disponible'">
            <% if (producto.stock === 0) { %>
              <div class="sin-stock">Sin Stock</div>
            <% } %>
          </div>
          <div class="producto-info">
            <h3 class="producto-nombre"><%= producto.nombre %></h3>
            <p class="producto-serie"><%= producto.serie_anime %></p>
            <p class="producto-categoria">Categor√≠a: <%= producto.categoria %></p>
            <p class="producto-descripcion"><%= producto.descripcion %></p>
            <div class="producto-footer">
              <span class="producto-precio">$<%= parseFloat(producto.precio).toFixed(2) %> MXN</span>
              <span class="producto-stock">Stock: <%= producto.stock %></span>
            </div>
            <% if (producto.stock > 0) { %>
              <button class="btn-agregar" onclick="agregarAlCarrito(<%= producto.id %>)">
                Agregar al Carrito
              </button>
            <% } else { %>
              <button class="btn-agregar btn-disabled" disabled>
                Agotado
              </button>
            <% } %>
          </div>
        </div>
      <% }); %>
    </div>
  </main>
  
  <div id="notificacion" class="notificacion"></div>
  
  <script src="/js/main.js"></script>
</body>
</html>